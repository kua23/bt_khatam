      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"john.doe\",\n  \"password\": \"SecurePass@123\",\n  \"email\": \"john.doe@example.com\",\n  \"mobileNumber\": \"9876543210\",\n  \"preferredLanguage\": \"en\",\n  \"preferredCurrency\": \"USD\"\n}"
        },
        "url": {
          "raw": "http://localhost:8081/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "auth", "register"]
        }
      }
    },
    {
      "name": "4. Login with Admin",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"usernameOrEmailOrMobile\": \"admin\",\n  \"password\": \"Admin@123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8081/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "5. Login with User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"usernameOrEmailOrMobile\": \"john.doe\",\n  \"password\": \"SecurePass@123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8081/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "6. Validate Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "\"YOUR_JWT_TOKEN_HERE\""
        },
        "url": {
          "raw": "http://localhost:8081/api/auth/validate-token",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "auth", "validate-token"]
        }
      }
    },
    {
      "name": "7. Logout",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_JWT_TOKEN_HERE"
          }
        ],
        "url": {
          "raw": "http://localhost:8081/api/auth/logout",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "auth", "logout"]
        }
      }
    }
